{
  "name": "@yagisumi/groonga-stdio-client",
  "version": "0.1.0",
  "description": "Groonga Standard I/O interface client.",
  "keywords": [],
  "private": true,
  "main": "lib/groonga-stdio-client",
  "module": "lib/groonga-stdio-client.mjs",
  "types": "lib/groonga-stdio-client.d.ts",
  "unpkg": "umd/groonga-stdio-client.js",
  "scripts": {
    "test": "run-s prettier:check eslint mocha:coverage",
    "jest": "jest",
    "mocha": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=tsconfig.mocha.json mocha \"test/**/*.test.ts\"",
    "mocha:coverage": "nyc npm run mocha -- --no-parallel",
    "build": "run-s clean build:*",
    "clean": "rimraf lib coverage umd *.tgz .rpt2_cache .nyc_output",
    "build:cjs": "rollup -c -f cjs -o ./lib/groonga-stdio-client.js",
    "build:mjs": "rollup -c -f es -o ./lib/groonga-stdio-client.mjs",
    "build:d_ts": "tsc -p src -d --emitDeclarationOnly --outDir ./lib",
    "prettier:check": "prettier --check \"**/*.{ts,js,json}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,js,json}\"",
    "eslint": "eslint \"{src,test}/**/*.{js,ts}\"",
    "prepack": "run-s build test"
  },
  "author": "yagisumi",
  "repository": "github:yagisumi/node-groonga-stdio-client",
  "homepage": "http://github.com/yagisumi/node-groonga-stdio-client#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "jest": "^26.5.0",
    "mocha": "^8.1.3",
    "mocha-ui-jest": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@yagisumi/groonga-command": "^0.1.0"
  }
}
